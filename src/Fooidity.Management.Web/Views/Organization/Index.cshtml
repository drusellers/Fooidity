@model IEnumerable<Fooidity.Management.Web.Models.OrganizationViewModel>

@{
    ViewBag.Title = "Organizations";
}

<h2>Organizations</h2>
<p>
    Organizations contain applications and can be associated with multiple users. Associated users can create applications
    and manage the access keys for those applications.
</p>
<p>
    @Html.ActionLink("Create New", "Create", new { @class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
