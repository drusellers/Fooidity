@using Fooidity.Management.Web.Models
@model IEnumerable<ApplicationViewModel>

@{
    ViewBag.Title = "Applications";
}

<h2>Applications</h2>
<p>
    Applications contain code features that can be managed together.
</p>

<p>
    @Html.ActionLink("Create New", "Create", new { @class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrganizationId)
        </th>
        <th></th>
    </tr>

    @foreach (ApplicationViewModel item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationId)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new {id = item.Id})
            </td>
        </tr>
    }

</table>
